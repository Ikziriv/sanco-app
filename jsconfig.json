{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "$lib/*": [
                "src/lib/*"
            ],
            "$lang/*": [
                "lang/*"
            ]
        }
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.js",
        "src/**/*.svelte"
    ]
}